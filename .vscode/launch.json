            ],
            "preLaunchTask": "build", // Задача для сборки
            "setupCommands": [
                {
                    "description": "Включить отображение отладочных сообщений",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "C:/MinGW/bin/gdb.exe", // Убедитесь, что путь к gdb правильный
